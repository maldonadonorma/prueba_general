<nav class="navbar navbar-inverse">
    <div class="container-fluid">

        <ul class="nav navbar-nav">
            <li><a href="/producto/lista">Catalogo</a></li>
            <li class="active"><a href="/">Inicio</a></li>

            <li><a href="/pedido/lista">Carrito de compras</a></li>
