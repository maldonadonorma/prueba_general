            <h3><a href="/pedido/agregar">Agregar Pedido</a></h3>
            <h1>Pedidos</h1>
            <% if (pedidos){  %>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Nombre</th>
                                <th>Descripcion</th>
                                <th>Precio</th>
                                <th>Cantidad</th>
                                <th>Subtotal</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% pedidos.forEach(function(pedido) { %>
                            <tr>
                                <td><%= pedido.nombre %></a></td>
                                <td><%= pedido.descripcion %></td>
                                <td><%= pedido.precio %></td>
                                <td><%= pedido.cantidad %></td>
                                <td><%= pedido.subtotal %></td>
                            </tr>
                            <% }); %>
                            <tr>
                                <td colspan="4">Total</td>
                                <td><%=total%></td>
                            </tr>
                        </tbody>
                    </table>
                    <%} else {%>
                    <div>No hay pedidos.</div>
                    <% } %>
