<div class="container">

    <h1 class="titulo2">Catalogo de Productos</h1>
    <p>Selecciona el ID o producto para ver más</p>
    <% if (productos){ %>
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Descripcion</th>
                    <th>Precio</th>
                </tr>
            </thead>
            <tbody>
                <% productos.forEach(function(producto) { %>
                    <tr>
                        <td><a href="/producto/mostrar/<%= producto._id %>">
                                <%= producto._id %>
                            </a></td>
                        <td><a href="/producto/mostrar/<%= producto._id %>">
                                <%= producto.nombre %>
                            </a></td>
                        <td>
                            <%= producto.descripcion %>
                        </td>
                        <td>
                            <%= producto.precio %>
                        </td>
                    </tr>
                    <% }); %>
            </tbody>
        </table>
        <%} else {%>
            <div>No hay productos.</div>
            <% } %>

</div>
<div class="container">
    <a class="Do" href="/producto/agregar">Añadir productos al Catalogo</a>

</div>